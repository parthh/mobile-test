<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="generalRecyclerViewStyle">
        <!-- NOTE: clipChildren should be true on API level 10 -->
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="LargeTextViewBlackBold" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTextViewBlack" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumTextViewBlackBold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextViewBlack" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallTextViewBlackBold" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTextViewBlack" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LargeTextViewGreyBold" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTextViewGreay" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumTextViewGreyBold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextViewGrey" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SmallTextViewGreyBold" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SmallTextViewGrey" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumTextViewRedBold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextViewRed" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="EdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>


</resources>
