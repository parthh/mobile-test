<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.BaseActivity">


    <fragment
            android:id="@+id/fragmentParent"
            android:name="com.quickseries.quickseriesapp.ui.categories.FragmentParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    <ProgressBar
            android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

</RelativeLayout>
